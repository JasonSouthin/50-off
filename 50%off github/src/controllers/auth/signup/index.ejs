<%%- include('./src/controllers/includes/head.ejs') %>

<body>

    <%%- include('./src/controllers/includes/navigation.ejs') %>

    <main class="add-product--container container">
        <%% if( errorMessage ) { %>

            <div><%%= errorMessage %></div>

        <%% } %>
        <form class="row login-form" action="/signup" method="POST" novalidate>
            <div class="product-form form-group">
                <label for='isShop'>Are you a Shop ?</label>
                <input class="form-control" type="checkbox" name="isShop" id='isShop' value="<%%= oldInput.isShop %>">
            </div>
            <div class="product-form form-group">
                    <label for='name'>name</label>
                    <input 
                    class="form-control" type="text" name="name" id='name' value="<%%= oldInput.name %>">
            </div>
            <div class="product-form form-group">
                <label for='location'>location</label>
                <input class="form-control" type="text" name="location" id='location' value="<%%= oldInput.location %>">
            </div>
            <div class="product-form form-group">
                <label for='logo'>logo</label>
                <input class="form-control" type="text" name="logo" id='logo' value="<%%= oldInput.logo %>">
            </div>
            <div class="product-form form-group">
                <label for='email'>Email</label>
                <input class="form-control <%%= validationErrors.find(e => e.param === 'email') ? 'invalid' : '' %>" type="email" name="email" id='email' value="<%%= oldInput.email %>">
            </div>
            <div class="product-form form-group">
                <label for='password'>Password</label>
                <input class="form-control <%%= validationErrors.find(e => e.param === 'password') ? 'invalid' : '' %>" type="password" name="password" id='password' value="<%%= oldInput.password %>">
            </div>
            <div class="product-form form-group">
                <label for='password'>Confirm Password</label>
                <input class="form-control <%%= validationErrors.find(e => e.param === 'confirmPassword') ? 'invalid' : '' %>" type="password" name="confirmPassword" id='confirmPassword' value="<%%= oldInput.confirmPassword %>">
            </div>

                <input type="hidden" name="_csrf" value="<%%= csrfToken %>">
            <button type="submit">SignUp</button>
        </form>
    </main>
</body>
</html>