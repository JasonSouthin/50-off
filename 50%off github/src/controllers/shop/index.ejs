<%%- include('./src/controllers/includes/head.ejs') %>

<body>

    <%%- include('./src/controllers/includes/navigation.ejs') %>

    <main>
        
        <%% if(prods.length > 0) { %>

                <div class="grid off50">

                    <%% for (let product of prods) { %>

                        <article class="card product-item">
                            <header class="card__header">
                                <h1 class="product__title"><%%= product.title %></h1>
                            </header>
                            <div class="card__image">
                                <img src="<%%= product.imageUrl %>"
                                    alt="<%%= product.title %>">
                            </div>
                            <div class="card__content">
                                <h2 class="product__price">$<%%= product.price %></h2>
                                <p class="product__description"><%%= product.description %></p>
                                <p class="product__name">Created By: <%%= product.createdBy %></p>
                                <p class="product__category">Category: <%%= product.category %></p>
                            </div>
                            <div class="card__actions">
                                <a href="/products/<%%= product._id %>" class="btn">Details</a>
                                <%% if (isAuthenticated) { %>
                                    <%%- include('./src/controllers/includes/add-to-cart.ejs', {product: product}) %>
                                <%% } %>
                            </div>
                        </article>

                    <%% } %>
                        
                </div>

            <%% } else { %>

                <h1>No Products Found ! </h1>

            <%% } %>
    </main>

    <img src="./src/static/icons/app-icon-148x148.png" alt="50off">
</body>
</html>